{
  "manifest_version": 3,
  "name": "TimeGuard",
  "version": "1.0",
  "description": "Suivez votre temps pass√© sur les sites web",
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "index.html",
    "default_icon": "logo.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["style.css", "assets/swsane.png"],
      "matches": ["<all_urls>"]
    }
  ]
}